{
    "AWSEBDockerrunVersion": 2,
    "ContainerDefinitions": [
        {
            "Name": "client",
            "Image": "anis/multi-client",
            "Hostname": "client",
            "essential": false,
            "Memory": 128
        },
        {
            "Name": "serer",
            "Image": "anis/multi-server",
            "Hostname": "api",
            "essential": false,
            "Memory": 128
        },
        {
            "Name": "worker",
            "Image": "anis/multi-worker",
            "Hostname": "worker",
            "essential": false,
            "Memory": 128
        },
        {
            "Name": "nginx",
            "Image": "anis/multi-nginx",
            "Hostname": "nginx",
            "essential": true,
            "Memory": 128,
            "PortMappings": [
                {
                    "HostPort": 80,
                    "ContainerPort": 80
                }
            ],
            "Links": ["client", "server"] 
        }
    ]

}